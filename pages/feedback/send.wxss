/**send.wxss**/

.feedback-warp {
  width: 100%;
  height: 100%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  background-color: #fff;
}

.add-ft{
  text-align: center;
  font-size: 29rpx;
  line-height: 38rpx;
  padding-top: 60rpx;
  color: #555555;
}

.feedback-warp > textarea {
  width: 94%;
  margin-left: 3%;
  font-size: 28rpx;
  color: #333;
  text-align: start;
  height: 110rpx;
}

.feedback-warp > view {
  width: 94%;
  margin-left: 3%;
  text-align: right;
  padding-top: 10rpx;
  font-size: 18rpx;
  color: #666;
}

.email-warp {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.email-warp > input {
  padding-left: 3%;
  width: 97%;
  background-color: #fff;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
}

.feed-send {
  width: 94%;
  margin-left: auto;
  margin-right: auto;
  border-radius: 8rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #29a1f7;
  color: #fff;
  font-size: 30rpx;
}


.support-image{
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  width: 480rpx;
  margin-left: 135rpx;
}

.share-btn{
  margin-top: 30rpx;
  width: 94%;
  margin-left: auto;
  margin-right: auto;
  border-radius: 8rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  background: transparent;
  border: none;
  background: #fff;
}

.share-btn::after{
  border: none;
  flex: 1;
}

.account-item {
  flex: 1;
  font-size: 30rpx;
  color: #444;
  text-align: left;
}

.account-arrow {
  width: 32rpx;
  height: 32rpx;
}

.official{
  border-radius: 8rpx;
  margin-top: 30rpx;
  width: 94%;
  height: 40rpx;
  margin-left: auto;
  margin-right: auto;
}

.tip-text{
  color: #999;
  padding-left: 22rpx;
  font-size: 24rpx;
  padding-top: 25rpx;
}

.help-text{
  color: #29a1f7;
  font-size: 25rpx;
  padding-top: 20rpx;
  line-height: 60rpx;
  text-align: center;
}