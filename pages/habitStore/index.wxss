/* pages/habitStore/index.wxss */

.habit-list-warp {
  background: #fff;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  min-height: 100%;
}

.insist-count {
  font-size: 30rpx;
  color: #333;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  font-weight: bold;
}

.scroll-habit {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.habit-store {
  display: inline-block;
  height: 200rpx;
  width: 330rpx;
  margin-left: 30rpx;
  background: #4aa3dd;
  border-radius: 12rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.scroll-warp-text {
  width: 270rpx;
  display: block;
  left: 30rpx;
  position: relative;
  text-align: center;
}

.habit-name {
  color: #fff;
  width: 100%;
  font-size: 30rpx;
  padding-top: 30rpx;
  height: 106rpx;
  white-space: pre-wrap;
}

.habit-insist {
  color: #fff;
  font-size: 24rpx;
}
